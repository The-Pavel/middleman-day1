<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="single-container" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
  <div class="flat-information">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "avatar" %>
    <p><%= flat.name %></p>
    <h1><%= flat.description %></h1>
    <p><%= flat.city_name %></p>
    <p>Rating:</p>
    <p><% (flat.rating).times do %>
        <i class="fa fa-star"></i>
        <% end %>
    </p>
  </div>
  <button type="submit" class="btn btn-danger">Book Now!</button>
</div>
